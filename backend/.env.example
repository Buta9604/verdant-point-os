# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/verdant_point?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# PIN Authentication
PIN_SECRET=your-pin-hashing-secret

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# METRC Integration (Mock for now)
METRC_API_URL=https://api-ca.metrc.com
METRC_API_KEY=your-metrc-api-key
METRC_FACILITY_LICENSE=your-facility-license
METRC_VENDOR_API_KEY=your-vendor-key

# Email (Future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-password

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Background Jobs
BULL_QUEUE_PREFIX=verdant:queue
BULL_REDIS_HOST=localhost
BULL_REDIS_PORT=6379

# Analytics
ANALYTICS_AGGREGATION_CRON=0 0 * * *
BACKUP_CRON=0 2 * * *

# Store Settings
STORE_NAME=Verdant Point Dispensary
STORE_TIMEZONE=America/Los_Angeles
DEFAULT_TAX_RATE=9.25
LOYALTY_POINTS_RATE=0.05
